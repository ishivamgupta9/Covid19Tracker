<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
   android:background="#150D23"
    android:layout_height="match_parent"
    tools:context=".CountryActivity">

<ImageView
    android:layout_width="160dp"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:scaleType="fitCenter"

    android:src="@drawable/flag"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INDIA"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"

        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TOTAL CASES"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1146524"
        android:textStyle="bold"
        android:textSize="30sp"
        android:id="@+id/totalConfirm"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="4dp"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+25256"
            android:id="@+id/todayConfirm"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="4dp"
            />








    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:backgroundTint="#4db6ac"
                android:elevation="40dp"

                app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RECOVERED CASES"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginTop="40dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1146524"
                    android:textStyle="bold"
                    android:id="@+id/totalrecovered"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+25256"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/todayrecovered"
                    android:layout_marginTop="4dp"
                    />


            </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:backgroundTint="#b388ff"
                android:elevation="40dp"
                android:layout_marginLeft="4dp"

                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:gravity="center"
                        android:text="DEATH"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/totaldeath"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="1146524"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/todaydeath"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="+25256"
                        android:textColor="@color/white" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:backgroundTint="#c5cae9"
                android:elevation="40dp"
                android:layout_marginLeft="4dp"

                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ACTIVE CASES"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginTop="40dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1146524"
                        android:id="@+id/totalactive"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        />




                </LinearLayout>



            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:backgroundTint="#dcedc8"
                android:elevation="40dp"
                android:layout_marginLeft="4dp"

                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TOTAL TEST DONE"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginTop="40dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1146524"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:id="@+id/totaltest"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        />




                </LinearLayout>



            </androidx.cardview.widget.CardView>






        </LinearLayout>
    </HorizontalScrollView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:id="@+id/changecountry"
        android:gravity="center"
        android:textStyle="italic"
        android:drawablePadding="5dp"
        android:layout_gravity="center"
        android:text="Other Countries"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/ic_baseline_flag_24"/>


    <TextView
        android:id="@+id/gostate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:gravity="center"
        android:textStyle="italic"
        android:drawablePadding="5dp"
        android:layout_gravity="center"
        android:text="Indian State Wise Cases"
        android:layout_margin="5dp"
        android:drawableLeft="?android:attr/actionModeWebSearchDrawable"/>

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:src="@drawable/ssssss"
    android:layout_gravity="center"
    android:scaleType="fitCenter"

    />








</LinearLayout>